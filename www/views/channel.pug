extends main
block content
    title #{login} - Channel Info - Okey bot
    div(class="center")
        form(action='/channel' method='GET' class="d-flex")
            input(name='username' type='text' placeholder='Check another channel' class='form-control form-control-sm' style='max-width: 200px;' autofocus required)
            input(type="submit" class='btn btn-sm btn-primary' value="üîç")
        table(id="channel" class='mt-3')
            tr 
                td ID 
                td #{id}
            tr 
                td Twitch ID 
                td #{TwitchId}
            tr
                td Login
                td
                    a(href=`https://www.twitch.tv/${login}` target="_blank") #{login}
            tr
                td Prefix
                td #{prefix}
            tr 
                td Added on 
                td #{added}